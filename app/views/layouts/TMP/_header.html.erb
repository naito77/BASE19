<header class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
  <div class="container">
    <%= link_to t('application'), root_path, id: "logo", class: "navbar-brand" %>
    <span class="align-middle">
      <ul class="list-inline list-unstyled">
        <li class="list-inline-item"><%= link_to t('menu.home'), root_path, class: "text-white" %></li>
        <li class="list-inline-item"><%= link_to t('menu.help'), help_path, class: "text-white" %></li>
        <% if logged_in? %>
          <li class="list-inline-item"><%= link_to t('menu.users'), users_path, class: "text-white" %></li>
          <li class="dropdown list-inline-item">
            <a href="#" class="dropdown-toggle text-white" data-toggle="dropdown">
              <%= t('menu.account') %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('menu.users'),  current_user, class: "text-white" %></li>
              <li><%= link_to t('menu.profile'), edit_user_path(current_user), class: "text-white" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('menu.logout'), logout_path, method: "delete", class: "text-white" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="list-inline-item"><%= link_to t('menu.login'), login_path, class: "text-white" %></li>
        <% end %>
      </ul>
    </span>
  </div>
</header>